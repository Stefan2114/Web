# The name of the Spring Boot application
spring.application.name=javaweb

# Database connection configuration
spring.datasource.url=jdbc:mysql://localhost:3306/2020_1  # URL of the MySQL database
spring.datasource.username=root                          # Database username
spring.datasource.password=admin                         # Database password
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver  # MySQL JDBC driver

# JPA and Hibernate configuration
spring.jpa.hibernate.ddl-auto=update                     # Automatically update the database schema
spring.jpa.show-sql=true                                 # Show SQL queries in the console
spring.jpa.properties.hibernate.format_sql=true          # Format SQL queries for better readability
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect  # Hibernate dialect for MySQL

# Server configuration
server.port=8080                                         # Port on which the application will run

# WebSocket configuration
spring.websocket.max-text-message-size=8192             # Maximum size for text messages
spring.websocket.max-binary-message-size=8192           # Maximum size for binary messages